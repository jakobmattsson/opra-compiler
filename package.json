{
  "name": "opra-compiler",
  "version": "0.1.2",
  "description": "Compiles an opra-project to a set of static files",
  "author": "Jakob Mattsson <jakob.mattsson@gmail.com> (jakobmattsson.se)",
  "main": "./lib/compiler.js",
  "bin": {
    "opra-compiler": "./bin/opra-compiler.js"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/jakobmattsson/opra-compiler.git"
  },
  "engines": {
    "node": ">= 0.8 < 0.12"
  },
  "scripts": {
    "pretest": "coffee -co lib src",
    "prepublish": "coffee -co lib src",
    "coverage": "jscov src .cov && JSCOV=.cov mocha --compilers coffee:coffee-script --reporter mocha-term-cov-reporter spec/library.coffee",
    "test": "mocha --compilers coffee:coffee-script spec/*.coffee"
  },
  "peerDependencies": {
    "opra": ">= 0.14"
  },
  "dependencies": {
    "optimist": ">= 0.3.5 < 0.7"
  },
  "devDependencies": {
    "coffee-script": ">= 1.4.0 < 2",
    "jscov": ">= 0.2.0 < 0.6",
    "mocha": ">= 1.7.4 < 2",
    "mocha-term-cov-reporter": ">= 0.1.0 < 0.2",
    "should": ">= 1.2.1 < 2"
  }
}
